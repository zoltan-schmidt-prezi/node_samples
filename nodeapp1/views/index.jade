extends layout

block content
  #header
    h1= title
  body
    button#defaultOpen.tablink(onclick="openPage('ERV', this, 'orange')") Exchange Rates
    button.tablink(onclick="openPage('Collections', this, 'orange')") Collections
    button.tablink(onclick="openPage('Portfolios', this, 'orange')") Portfolios
    #ERV.tabcontent
      #dropdown_wrapper
        h3 Select bond
            #dropdown
                select(name='sel_name', id='sel_name') 
                    option(value='') 
        canvas#myChart(width='400', height='100')
      //Wrapper
      #wrapper
        //MysqlRateList
        h3#tabletitle
        #mysqlRateList.table
            table
                thead
                    tr
                        th date
                        th rate
                        th currency
                tbody
        // /mysql Rate list
      // /Wrapper
      p Some news this fine day!
    #Collections.tabcontent
      //CollectionSumTable
      h3 Current Total Value
      #collectionsumtable.table
        table
          thead
            th date
            th total value
          tbody
      // /CollectionSumTable
      canvas#myPortfolio(width='400', height='150')
      //CollectionHistoryTable
      h3 Historical Total Value
      #collectionhistorytable.table
        table
          thead
            th date
            th total value
          tbody
      // /CollectionHistoryTable
    #Portfolios.tabcontent
      #dropdown_wrapper
        h3 Select bond
          #dropdown
            select(name='sel_portf', id='sel_portf') 
              option(value='') 
      #wrapper
        - for (i=0; i<2; i++)
            canvas(id="myPortfolio" + i, width='400', height='100')
